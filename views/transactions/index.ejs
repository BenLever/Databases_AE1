<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    
    <link rel="stylesheet" href="/css/transactions.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<%- include('../particles/header.ejs') %>
<body>
        <div class="container">
            <div>
                <table class="content-table">
                    <thead>
                      <tr>
                        <th>Amount (Â£)</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% transactions.forEach(transaction => { %>
                        <tr>
                            <td><%= transaction.amount %></td>
                            <td><%= transaction.type %></td>
                            <td><%= transaction.description %></td>
                            <td><%= transaction.createdAt.toLocaleDateString() %></td>
                            <td>
                                <a class="editbtn" href="/transactions/edit/<%= transaction.id %>">Edit</a>
                                <form method="POST" action="/transactions/<%= transaction.id %>?_method=DELETE">
                                    <button class="deletebtn" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <h3 class="habits">To See Your Spending Habits, Go To The Home Page</h3>

</body>
</html>